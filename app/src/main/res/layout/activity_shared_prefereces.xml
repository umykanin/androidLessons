<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">


    <TextView
            android:text="Kim jesteś?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:layout_alignLeft="@+id/editText_shared_pref"
            android:layout_alignRight="@id/editText_shared_pref"
            android:id="@+id/textView_shared_pref"
            android:layout_alignStart="@+id/editText_shared_pref"
            android:layout_alignEnd="@id/editText_shared_pref"/>

    <EditText
            android:id="@+id/editText_shared_pref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/textView_shared_pref"
            android:layout_marginLeft="17dp"
            android:ems="10"
            android:hint="Wpisz imię"
            android:inputType="textPersonName"
            android:layout_alignParentStart="true"/>

</RelativeLayout>
