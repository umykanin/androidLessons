<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin">
    <Button
            android:id="@+id/button20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ukryj/pokaż action bar"
            android:onClick="toggleActionBarVisibility"/>

    <Button
            android:id="@+id/button21"
            android:layout_below="@+id/button20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ukryj/Pokaż tytuł"
            android:onClick="toggleTitleVisibility" />

    <Button
            android:id="@+id/button22"
            android:layout_below="@id/button21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ukryj/Pokaż przycisk wstecz"
            android:onClick="toggleHomeButtonVisibility" />

    <Button
            android:id="@+id/button23"
            android:layout_below="@id/button22"
            android:shadowColor="@color/green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Action Mode"
            android:onClick="startActionMode" />

</RelativeLayout>
