<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">
<!--                tools:context="........IntentExampleActivity">-->

    <Button
            android:id="@+id/button09"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:onClick="simpleDialog"
            android:text="Prosty dialog" />
    <Button
            android:id="@+id/button10"
            android:layout_below="@id/button09"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="infoDialog"
            android:text="Info dialog z (toast)" />
    <Button
            android:id="@+id/button11"
            android:layout_below="@id/button10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="infoDialog2"
            android:text="Info dialog (setText)"/>

<LinearLayout
        android:id="@+id/linear_layout10"
        android:layout_width="match_parent"
        android:layout_below="@+id/button11"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:orientation="horizontal">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Wybrana opcja: "/>

    <TextView
            android:id="@+id/text_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="-------" />

</LinearLayout>

    <Button
            android:id="@+id/button12"
            android:layout_below="@+id/linear_layout10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="singleListElementDialog"
            android:text="Dialog z listą"/>

    <Button
            android:id="@+id/button13"
            android:layout_below="@id/button12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="singleListElementWithCheckDialog"
            android:text="Dialog z listą zaznaczaną"/>

    <Button
            android:id="@+id/button14"
            android:layout_below="@+id/button13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="timePickerDialog"
            android:text="Dialog z wyborem czasu" />

    <Button
            android:id="@+id/button15"
            android:layout_below="@+id/button14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="datePickerDialog"
            android:text="Dialog z wyborem daty" />

    <Button
            android:id="@+id/button16"
            android:layout_below="@id/button15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="customDialog"
            android:text="Dialog własny" />

</RelativeLayout>
